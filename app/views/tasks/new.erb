<div class="new-task">

  <%= erb :'/partials/_errors'%>
  <h1> Create a New Task in <%=@list.name%> </h1>

  <form action="/lists/<%=@list.id%>/tasks" method="POST">
    <p>
      <label for="task">Task:</label>
      <input type="text" name="task[task]" placeholder="Please enter your task" required size="30">
    </p>

    <p>
      <input type="submit" name="submit" value="Add New Task">
    </p>

  </form>
</div>
