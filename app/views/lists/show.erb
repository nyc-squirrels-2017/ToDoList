<div class="lists">
  <ol id="task-container">
    <h1><%=@list.title%></h1>
      <%@list.tasks.each do |task|%>
        <%= erb :'/partials/_single_task', locals:{task:task} %>
      <%end%>
  </ol>

  <form class="delete" action="/lists/<%=@list.id%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete List">
  </form> <br>

  <a href="/lists/<%=@list.id%>/edit">Edit Name</a> <br> <br>
  <a href="/lists/<%=@list.id%>/tasks/new">Add Task</a> <br> <br>

  <a href="/lists">Go Back</a>
</div>
