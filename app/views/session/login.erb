<h1> Login </h1>
  <%= erb :'/partials/_errors'%>

<form class="user-login" action="/session/login" method="post">

  <label for="username">Username</label>
  <input type="username" name="user[username]" placeholder="Please enter your username" required size="30"><br>

  <label for="password">Password</label>
  <input type="password" name="user[password]" placeholder="Please enter your password" required size="30"><br>

  <input type="submit" name="login" value="Login">

</form>
